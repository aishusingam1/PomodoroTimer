<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settingsView"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <Button
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"></Button>

    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customize work and break times." /> -->

    <TextView
        android:id="@+id/work_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Work Time" />

    <EditText
        android:id="@+id/work_time_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="number" />

    <TextView
        android:id="@+id/short_break_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Short Break" />

    <EditText
        android:id="@+id/short_break_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="number" />

    <TextView
        android:id="@+id/long_break_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Long Break" />

    <EditText
        android:id="@+id/long_break_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="number" />

</LinearLayout>